<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}Admin Login | www.dinlanka.com | Service Beyond Borders {% endblock %}</title>

        {% block stylesheets %}

            <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
            <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
            <link href="{{ asset('css/custom.css') }}" rel="stylesheet">

        {% endblock %}
        <link rel="shortcut icon" type="image/png" href="{{ asset('img/favicon.png') }}"/>

    </head>

    <body>

        {% block body %}
            <div class="container">
            <div class="row">
            <div class="col-xs-12">

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

            <div class="arkaplan">

                <img src="http://www.dpcplanning.com/images/admin.png" style="opacity: 0.7;" class="admin">

                <form action="{{ path('admin page') }}" method="post">

                    <div class="col-md-12">
                        <span class="glyphicon glyphicon-user simge"></span><input class="textgiris" type="text" placeholder="User Name">
                    </div>

                    <div class="col-md-12">
                        <span class="glyphicon glyphicon-pencil simge"></span><input class="textgiris" type="password" placeholder="Password">
                    </div>

                    <div class=""><input type="submit" value="Login" class="btn buton btn-success">

                    <div class="clearfix"></div>
                </form> 
         
            </div>

        {% endblock %}
   <!-- Â© 2017 dogukankeskin. All Rights Reserved.. --> 

        {% block javascripts %}   

            <script src="{{ asset('js/jquery-3.2.1.slim.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>

        {% endblock %}
    </body>
</html>







